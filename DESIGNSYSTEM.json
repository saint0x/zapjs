  "animations": {
    "keyframes": {
      "gradient-x": {
        "description": "Horizontal gradient animation",
        "duration": "15s ease infinite",
        "keyframes": {
          "0%, 100%": { "background-size": "200% 200%", "background-position": "left center" },
          "50%": { "background-size": "200% 200%", "background-position": "right center" }
        }
      },
      "gradient-y": {
        "description": "Vertical gradient animation",
        "duration": "15s ease infinite",
        "keyframes": {
          "0%, 100%": { "background-size": "400% 400%", "background-position": "center top" },
          "50%": { "background-size": "200% 200%", "background-position": "center center" }
        }
      },
      "gradient-xy": {
        "description": "Diagonal gradient animation",
        "duration": "15s ease infinite",
        "keyframes": {
          "0%, 100%": { "background-size": "400% 400%", "background-position": "left center" },
          "50%": { "background-size": "200% 200%", "background-position": "right center" }
        }
      },
      "float": {
        "description": "Floating up/down effect",
        "duration": "6s ease-in-out infinite",
        "keyframes": {
          "0%, 100%": { "transform": "translateY(0)" },
          "50%": { "transform": "translateY(-20px)" }
        }
      },
      "shimmer": {
        "description": "Shimmer/shine effect",
        "duration": "2s linear infinite",
        "keyframes": {
          "0%": { "transform": "translateX(-100%)" },
          "100%": { "transform": "translateX(100%)" }
        }
      },
      "glow": {
        "description": "Pulsing glow effect",
        "duration": "2s ease-in-out infinite alternate",
        "keyframes": {
          "0%": { "opacity": "0.5", "filter": "blur(20px)" },
          "100%": { "opacity": "1", "filter": "blur(25px)" }
        }
      },
      "pulse-slow": {
        "description": "Slow pulse effect",
        "duration": "4s cubic-bezier(0.4, 0, 0.6, 1) infinite",
        "keyframes": "Tailwind default pulse"
      },
      "animateIn": {
        "description": "Fade in with slide up",
        "duration": "0.5s ease-out forwards",
