{
  "description": "Localhost load test configuration",
  "server": {
    "host": "http://localhost:3000",
    "warmup_requests": 1000,
    "warmup_duration": "5s"
  },
  "tests": {
    "static_route": {
      "script": "wrk-scripts/static-route.lua",
      "threads": 4,
      "connections": 100,
      "duration": "30s",
      "target_rps": 180000,
      "description": "Static route lookup performance test"
    },
    "dynamic_route": {
      "script": "wrk-scripts/dynamic-route.lua",
      "threads": 4,
      "connections": 100,
      "duration": "30s",
      "target_rps": 45000,
      "description": "Dynamic route with IPC performance test"
    },
    "mixed_workload": {
      "script": "wrk-scripts/mixed-workload.lua",
      "threads": 4,
      "connections": 100,
      "duration": "30s",
      "target_rps": 100000,
      "description": "Realistic mixed traffic pattern"
    }
  },
  "system": {
    "note": "For accurate results, ensure CPU governor is set to 'performance'",
    "commands": {
      "linux": "sudo cpupower frequency-set --governor performance",
      "macos": "sudo pmset -a womp 0"
    }
  }
}
